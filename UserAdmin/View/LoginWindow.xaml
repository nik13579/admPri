<Window x:Class="View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400" FontSize="14" Background="#1d3557">
    <Border Background="#457b9d" CornerRadius="20" Margin="40">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label x:Name="label" Content="Username" Foreground="White" FontSize="20"/>
            <TextBox x:Name="userNameTxtBox" TextWrapping="Wrap" Background="#e0d0ce" Padding="7" Foreground="#1d3557" FontSize="16" FontWeight="Medium">
            </TextBox>
            <Label x:Name="label1" Content="Password" Foreground="White" FontSize="20"/>
            <PasswordBox x:Name="passwordTxtBox" Background="#e0d0ce" Padding="7" Foreground="#022b3a" FontSize="16"/>
            <Button x:Name="button" Content="Login" Margin="80,20" Padding="10" Background="#a8dadc" Foreground="#1d3557" FontSize="20" Click="button_Click" />
        </StackPanel>
    </Border>
</Window>
